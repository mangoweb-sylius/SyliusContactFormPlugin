<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		   xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<services>
		<defaults public="true"/>

		<service id="sylius.behat.context.ui.admin.message_form"
				 class="Tests\MangoSylius\SyliusContactFormPlugin\Behat\Context\Ui\Admin\ManagingAdminMessageContext">
			<argument type="service" id="Tests\MangoSylius\SyliusContactFormPlugin\Behat\Pages\Admin\Message\ShowPageInterface"/>
			<argument type="service" id="sylius.behat.notification_checker"/>
            <argument type="service" id="sylius.behat.email_checker"/>
		</service>


        <service id="Tests\MangoSylius\SyliusContactFormPlugin\Behat\Pages\Admin\Message\ShowPageInterface"
                 class="Tests\MangoSylius\SyliusContactFormPlugin\Behat\Pages\Admin\Message\ShowPage"
                 parent="sylius.behat.symfony_page"
                 public="true"
        />

		<service id="mango_sylius.behat.context.setup.message"
				 class="Tests\MangoSylius\SyliusContactFormPlugin\Behat\Context\Setup\MessageContext">
			<argument type="service" id="doctrine.orm.entity_manager"/>
			<argument type="service" id="sylius.repository.customer"/>
		</service>

		<service id="sylius.behat.email_checker" class="Sylius\Component\Core\Test\Services\EmailChecker">
			<argument>%kernel.cache_dir%/spool</argument>
		</service>
	</services>
</container>
